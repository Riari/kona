<UserControl x:Class="Kona.ResultItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kona"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <StackPanel.Style>
            <Style TargetType="{x:Type StackPanel}">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#0CC7D7E6" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </StackPanel.Style>
        <Label Padding="16 8 16 0" Name="TitleLabel" Foreground="#FFF9F9F9" FontFamily="Open Sans" FontSize="18" FontWeight="Normal">
        </Label>
        <Label Padding="16 0 16 8" Name="DescriptionLabel" Foreground="#CCD6D6D6" FontFamily="Open Sans" FontSize="14" FontWeight="Normal">
        </Label>
    </StackPanel>
</UserControl>
